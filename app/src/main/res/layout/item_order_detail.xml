<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/twelve"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="CUCUMBER-STUFFED CHERRY TOMATOES" />

                <TextView
                    android:id="@+id/tvItemPrize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:layout_marginRight="4dp"
                    android:text="600.15" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll1"
                android:layout_margin="4dp"
                android:background="#a8a5a5" />

            <TextView
                android:id="@+id/tvAddOns"
                android:layout_below="@+id/view1"
                android:text="Addons :"
                android:textColor="@color/twelve"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_marginLeft="4dp" />

            <View
                android:id="@+id/view4"
                android:layout_below="@+id/tvAddOns"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:background="#a8a5a5" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAddOnsDetail"
                android:layout_below="@+id/view4"
                android:layout_width="match_parent"
                android:clickable="false"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvAddOnsDetail"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_marginLeft="4dp"
                    android:text="FULL" />

                <TextView
                    android:id="@+id/tv_item_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:layout_marginRight="4dp"
                    android:text="10" />


            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll2"
                android:layout_margin="4dp"
                android:background="#a8a5a5" />

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_marginLeft="4dp"
                    android:text="Status" />

                <TextView
                    android:id="@+id/tv_item_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:layout_marginRight="4dp"
                    android:text="Pending" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>