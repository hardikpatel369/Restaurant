<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Counter_Name"
                android:text="MAIN HALL-AC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:textColor="@color/blue"
                android:padding="10dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:textAppearanceMedium"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/Counter_Type"
                android:text="Counter Type: RESTAURANT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#414d2b"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/Department_Name"
                android:text="Department: DINING HALL AC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#414d2b"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/Menu_Name"
                android:text="Menu: MAIN MENU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#414d2b"
                tools:targetApi="jelly_bean" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>